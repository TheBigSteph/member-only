
<h1>Sign in</h1>

<%= bootstrap_form_for(:session, url: login_path, layout: :horizontal, label_col: "col-sm-2", control_col: "col-sm-10") do |f| %>
  <%= f.email_field :email %>
  <%= f.password_field :password %>
  <%= f.label :remember_me, class: "checkbox inline" do %>
    <%= f.check_box :remember_me %>
  <% end %>
  <%= f.submit 'Sign in' %>
<% end %>
